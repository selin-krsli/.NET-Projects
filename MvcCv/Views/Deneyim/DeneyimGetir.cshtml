@using MvcCv.Models.Entity
@model TBL_EXPERIENCE
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Deneyim Güncelleme Sayfası</h4>
<br />

<form method="post">
    @Html.Label("Deneyim ID")
    @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(s => s.Baslik, new { @class = "form-control" })
    <br />
    @Html.Label("Alt Başlık")
    @Html.TextBoxFor(s => s.AltBaslik, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(s => s.Tarih, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(s=>s.Aciklama, new {@class="form-control"})
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>

