@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px;">
        <label>Üye ID</label>
        @Html.TextBoxFor(s => s.Uye, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Kitap ID</label>
        @Html.TextBoxFor(s => s.Kitap, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Personel ID</label>
        @Html.TextBoxFor(s => s.Personel, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="AlısTarihi" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div style="margin-top:15px;">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IadeTarihi" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-group" style="background-color:brown; color:white;">Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="IslemDurum" />
    </div>
</form>


