@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "RefundMovement";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using(Html.BeginForm("UpdateRefund", "Movement", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(s => s.TBL_KITAP.Ad, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(s => s.TBL_UYELER.Ad, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(s => s.TBL_PERSONEL.Personel, new { @class = "form-control" })
        <br />
        <label>Alış Tarihi</label>
        @Html.TextBoxFor(s => s.AlısTarihi, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>İade Tarihi</label>
        @Html.TextBoxFor(s => s.IadeTarihi, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="UyeGetirTarih" value="@DateTime.Now.ToShortDateString()"/>
        <br />
    </div>
    <div>
        <button class="btn btn-group" style="background-color:#64d8ca; color:white">Ödünç Kitabı Geri Al</button>
    </div>
}

