@model MvcKutuphane.Models.Entity.TBL_PERSONEL
@{
    ViewBag.Title = "UpdateStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">
        @Html.LabelFor(s => s.ID)
        @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
        <br />
        <label>Personel Adı</label>
        @Html.TextBoxFor(s => s.Personel, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}



