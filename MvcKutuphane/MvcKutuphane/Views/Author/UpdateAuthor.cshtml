@model MvcKutuphane.Models.Entity.TBL_YAZAR
@{
    ViewBag.Title = "UpdateAuthor";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using(Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">
        <div style="margin-bottom:15px;">
            <label>Yazar ID</label>
            @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px;">
            <label>Yazar Adı</label>
            @Html.TextBoxFor(s=>s.Ad, new {@class="form-control"})
        </div>
        <div style="margin-bottom: 15px;">
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(s => s.Soyad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px;">
            <label>Yazar Detay Bilgileri</label>
            @Html.TextAreaFor(s => s.Detay, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
    </div>
}

