@model MvcKutuphane.Models.Entity.TBL_KATEGORI
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using(Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">
        @Html.LabelFor(s => s.ID)
        @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(s => s.Ad)
        @Html.TextBoxFor(s => s.Ad, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

